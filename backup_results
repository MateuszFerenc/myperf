#!/bin/bash

if [[ ! -d old_results ]]; then
	mkdir old_results
fi

cd old_results

now_date=$(date +%H%M%S_%d%m%y)

mkdir $now_date

cd $now_date

if [[ "$#" -eq  "1" ]]; then
	echo "Backup of $1 results"
	cp -r ../../results_all/"$1"/* .
else
	echo "Backup of all results"
	cp -r ../../results_all/* .
fi

cd ../../

echo "OK!"
